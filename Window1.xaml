<Window x:Class="HCI9.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="230" Width="310">
    <Grid>
        <Button Grid.Row="1" Grid.Column="1" Background="#FFFFF300" Content="Button" BorderBrush="{x:Null}"  />
        <Button Grid.Row="1" Grid.Column="2" Background="#FF92FF53" Content="Button" BorderBrush="{x:Null}"  />
        <Button Grid.Column="1" Background="#FFDC00FF" Content="Button" BorderBrush="{x:Null}" />
        <Button Background="Red" Content="Button" BorderBrush="{x:Null}"/>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*">
            </ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>

    </Grid>
</Window>
